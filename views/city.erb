<h3>City Name: <%= @city.name %></h3>

<h4>City Trains</h4>

  <% if @city.trains %>
    <ul>
      <% @city.trains.each do |train| %>
        <li><a href="/cities/<%= @city.id %>/trains/<%= train.id %>"><%= train.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no trains listed for this city yet.</p>
  <% end %>

<h4>Add an train:</h4>

<form action="/cities/<%= @city.id %>" method="post">
    <label> Train Name
        <input name='train_name' type="text">
    </label>
    <button type="submit">Add Trains</button>
</form>

  <button type="submit" class="btn btn-primary">Delete city</button>
</form>
<p><a href="/cities/<%= @city.id %>/edit">Edit city</a></p>
<a href="/cities">Return to city list</a>
