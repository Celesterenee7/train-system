<h3><center>City: <%= @city.name %></center></h3>

<h4>Update <%= @city.name %>:</h4>

<form action="/cities/<%= @city.id %>" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="patch">
    <input name="name" type="text" class="form-control" placeholder="<%= @city.name %>">
  </div>
  <button type="submit" class="btn btn-primary">Update city</button>
</form>

<form action="/cities/<%= @city.id() %>" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="delete">
  </div>
  <button type="submit" class="btn btn-primary">Delete city</button>
</form>

<br>

<p><a href="/cities">Return to cities page</a></p>
<p><a href="/">Return to home</a></p>
