<h3>Cities</h3>

<% if @cities.any? %>
<ul>
  <% @cities.each do |city| %>
  <li><a href="/cities/<%= city.id %>"><strong><%= city.name %></strong></a></li>
  <% end %>
</ul>
<% else %>
<p>There are currently no cities to display.</p>
<% end %>

<p><a href="/cities/new">Add a new city</a></p>

<p><a href="/">Return to main page</a></p>
