<h3><center>Train: <%= @train.name %></center></h3>

<h4>Update <%= @train.name %>:</h4>

<form action="/trains/<%= @train.id %>" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="patch">
    <input name="name" type="text" class="form-control" placeholder="<%= @train.name %>">
  </div>
  <button type="submit" class="btn btn-primary">Update train</button>
</form>

<form action="/trains/<%= @train.id() %>" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="delete">
  </div>
  <button type="submit" class="btn btn-primary">Delete train</button>
</form>

<br>

<p><a href="/trains">Return to trains page</a></p>
<p><a href="/">Return to home</a></p>
