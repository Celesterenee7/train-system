<h3><center>Train: <%= @train.name %></center></h3>

<h3><%= @train.name %> Cities</h3>

<% if @train.cities.any? %>
<ul>
  <% @train.cities.each do |city| %>
  <li><a href="/trains/<%= @train.id %>"><strong><%= city.name %>, <%= @train.name %></strong></a></li>
  <% end %>
</ul>
<% else %>
<p>There are currently no cities to display.</p>
<% end %>

<br>

<h4>Add a city:</h4>

<form action="/trains/<%= @train.id %>" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="patch">
    <input name="city_name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-success">Add city</button>
</form>

<br>

<p><a href="/trains/<%= @train.id %>/edit">Edit <%= @train.name %></a></p>
<p><a href="/trains">Return to train list</a></p>
